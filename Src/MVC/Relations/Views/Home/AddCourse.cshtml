@model Relations.Models.CourseViewModel

@{
    ViewData["Title"] = "AddCourse";
}



<h2>Create</h2>

<h4>Group to tournament: @Model.University.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCourse" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UniversityId" />

            <partial name="_Course" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.UniversityId" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

